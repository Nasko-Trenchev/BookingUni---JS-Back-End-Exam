
        <section id="viewCatalog" class="background-img">
            {{#if allHotels}}
            <div class="added-hotels">
                {{#each allHotels}}
                <a href="{{#if isAuthenticated}}/details/:{{_id}}{{else}}/login{{/if}}" class="added-hotel">
                    <img src="{{imgUrl}}" alt=""
                        class="picture-added-hotel">
                    <h3>{{name}}</h3>
                    <span>Free rooms: {{freeRooms}}</span>
                </a>
                {{/each}}
            </div>
            {{else}}
           <div class="guest">
                There are no Hotels found...
            </div>
            {{/if}}
        </section>
